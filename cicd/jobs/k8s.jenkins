pipelineJob('my-application-pipeline') {
    definition {
        cpsScm {
            scm {
                git {
                    remote {
                        url 'https://github.com/myorg/myapp.git'
                    }
                    branch 'main'
                }
            }
            scriptPath 'Jenkinsfile'
        }
    }
    triggers {
        scm('H/5 * * * *')
    }
    properties {
        disableConcurrentBuilds()
    }
}